<Window x:Class="NapierBankingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBankingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="101,291,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Background="#FF2BBD00"/>
        <Grid HorizontalAlignment="Left" Height="383" Margin="9,15,0,0" VerticalAlignment="Top" Width="335">
            <TextBlock x:Name="txtBlockHeader" HorizontalAlignment="Left" Margin="7,2,0,0" TextWrapping="Wrap" Text="Header" VerticalAlignment="Top" RenderTransformOrigin="8.771,13.972"/>
            <TextBox x:Name="txtBoxHeader" HorizontalAlignment="Left" Height="25" Margin="6,23,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="313"/>
            <TextBlock x:Name="txtBlockBody" HorizontalAlignment="Left" Margin="9,54,0,0" TextWrapping="Wrap" Text="Body" VerticalAlignment="Top"/>
            <TextBox x:Name="txtBoxBody" HorizontalAlignment="Left" Height="178" Margin="9,82,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="309"/>
            <Button x:Name="btnLoadFromFile" Content="Load From File" HorizontalAlignment="Left" Margin="83,322,0,0" VerticalAlignment="Top" Width="145" Click="btnLoadFromFile_Click"/>
            <Button x:Name="btnEndSession" Content="EndSession" HorizontalAlignment="Left" Margin="108,353,0,0" VerticalAlignment="Top" Width="75"/>
        </Grid>
        <ListView x:Name="lstViewMessages" HorizontalAlignment="Left" Height="184" Margin="402,33,0,0" VerticalAlignment="Top" Width="363">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lstViewUnloadedMessages" HorizontalAlignment="Left" Height="132" Margin="407,253,0,0" VerticalAlignment="Top" Width="332">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
